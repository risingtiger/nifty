{
  "name": "niftyapp",
  "version": "1.0.1",
  "scripts": {
    "dev": "cd server && NODE_ENV=dev nodemon --watch ./build ./build/index.js",
    "devhttps": "cd server && NODE_ENV=dev USE_HTTPS=true nodemon --watch ./build ./build/index.js",
    "devdebug": "cd server && NODE_ENV=dev nodemon --inspect --watch ./build ./build/index.js",
    "dist": "cd server && NODE_ENV=dist node ./build/index.js",
    "distdebug": "cd server && NODE_ENV=dist node --inspect ./build/index.js"
  },
  "nodemonConfig": {
    "delay": 2500
  },
  "dependencies": {
    "chartist": "^1.3.0",
    "firebase": "^11.0.2",
    "lit": "^3.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.9.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.9.0",
    "brotli": "^1.3.3",
    "esbuild": "0.24.0",
    "eslint": "^9.14.0",
    "fantasticon": "^3.0.0",
    "globals": "^15.12.0",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "uglify-js": "^3.19.3",
    "uglifycss": "^0.0.29"
  }
}
